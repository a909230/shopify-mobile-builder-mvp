// This is a proposed schema for your Shopify App

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Session {
  id          String    @id
  shop        String
  state       String
  isOnline    Boolean   @default(false)
  scope       String?
  expires     DateTime?
  accessToken String
  userId      BigInt?
}

model StoreConfig {
  id          String   @id @default(uuid())
  shop        String   @unique
  shortCode   String   @unique // The 6-digit code for invite access
  qrCodeUrl   String?
  
  // Branding
  logoUrl     String?
  primaryColor String? @default("#000000")
  
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}
